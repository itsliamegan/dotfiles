# Font.
font pango:Inconsolata 14

# Use the windows key as $mod.
set $mod Mod4

# Disable borders on windows.
default_border none

# Open a terminal.
bindsym $mod+Return exec urxvt

# Open an app launcher.
bindsym $mod+r exec rofi -matching fuzzy -theme solarized -show run

# Open Emacs.
bindsym $mod+e exec emacs

# Open Firefox.
bindsym $mod+f exec firefox

# Kill focused window.
bindsym $mod+Shift+q kill

# Set the vim keys for directional movement.
set $left h
set $down j
set $up k
set $right l

# Change focus.
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move focused window.
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Set workspace variables for use later.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Move workspaces for multi-monitor setup.
workspace $ws1 output DP-2-1
workspace $ws2 output DP-2-2

# Switch to a different workspace.
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+10 workspace number $ws10

# Move focused window to workspace.
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+10 move container to workspace number $ws10

# Restart i3.
bindsym $mod+Shift+r restart

# Exit i3.
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Are you sure you want to exit i3?' -B 'Yes, exit i3' 'i3-msg exit'"

# Increase and decrease brightness.
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# Rebind keys.
exec --no-startup-id xmodmap ~/.Xmodmap

# Start xcape to allow Control to be used as Escape when pressed but as normal
# Control when held.
exec --no-startup-id xcape

# Start xcompmgr to manage transparency.
exec --no-startup-id xcompmgr -n &

# Start redshift to make colors easier on the eyes at night.
exec --no-startup-id redshift -c ~/.redshift.conf &

# Set background to static image.
exec --no-startup-id feh --bg-scale ~/pictures/wallpapers/romania.jpg

# Start system tray applications.
exec --no-startup-id pasystray &
exec --no-startup-id nm-applet &
exec --no-startup-id blueman-applet &

# Status bar config.
bar {
  status_command i3status

  position top
  tray_output primary
}
